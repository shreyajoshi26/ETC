    <template id="auth_signup.signup" name="Sign up login">
        <t t-call="web.login_layout">
            <div class="background">


                <form class="oe_signup_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <t t-call="auth_signup.fields">
                        <t t-set="only_passwords" t-value="bool(token)"/>
                    </t>
                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link pull-right">Back to Login</a>
                        <button type="submit" class="btn btn-primary pull-left">Sign up</button>
                    </div>
                </form>
            </div>
        </t>
    </template>

    <template inherit_id="website_sale.cart" id="my_custom_cart">
        <xpath expr="//h1[@class='mb32']" position="replace">
            <h1 class="mb32">Payment Details</h1>
        </xpath>
        <xpath expr="//div[@id='right_column']" position="replace">
        </xpath>
        <xpath expr="//a[@t-if='not optional_products and website_sale_order and website_sale_order.website_order_line']"
               position="replace">
            <a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line"
               class="btn btn-primary pull-right mb32" href="/shop/payment">
                <span class="hidden-xs">Process Checkout</span>
                <span class="visible-xs-inline">Checkout</span>
                <span class="fa fa-long-arrow-right"/>
            </a>
        </xpath>
    </template>

    <template inherit_id="website_sale.cart_lines" id="my_custom_cart_lines">
        <xpath expr="//td[@id='td-qty']" position="replace">
        </xpath>
        <xpath expr="//thead//th[@width='130']" position="replace">
        </xpath>
    </template>

    <template id="custom_header" inherit_id="website_sale.header">
        <xpath expr="//a[@href='/shop/cart']" position="replace">
            <a href="/shop/cart">
                Payment Details
                <!--<sup t-attf-class="my_cart_quantity label label-primary"-->
                     <!--t-esc="website_sale_order and website_sale_order.cart_quantity or ''"/>-->
            </a>
        </xpath>
    </template>

    <template inherit_id="website_sale.checkout" id="custom_chekout">
        <xpath expr="//div[@class='row']/div[@class='col-md-8 oe_cart']/div[@class='row']" position="replace">
            <div>
                Please Confirm ..
            </div>
        </xpath>
        <xpath expr="//t[@t-if='not only_services']" position="replace">
        </xpath>
        <xpath expr="//a[@href='/shop/cart']" position="replace">
            <a href="/shop/cart" class="btn btn-default mb32">
                <span class="fa fa-long-arrow-left"/>
                Back
            </a>
        </xpath>
    </template>

    <template inherit_id="website_sale.payment" id="custom_payment">
        <xpath expr="//thead//th[@width='120']" position="replace">
        </xpath>
        <xpath expr="//tbody//td[4]" position="replace">
        </xpath>
        <xpath expr="//div[@id='right_column']" position="replace">
        </xpath>
    </template>

    <template inherit_id="website_sale.confirmation" id="custom_confirmation">
        <xpath expr="//div[@class='oe_cart']//th[2]" position="replace">
        </xpath>
        <xpath expr="//tbody//td[2]" position="replace">
        </xpath>
        <xpath expr="//div[@class='col-lg-3 col-lg-offset-1 col-sm-3 text-muted']" position="replace">
        </xpath>
        <xpath expr="//tfooter" position="replace">
            <tfooter>
                <tr>
                    <td colspan="1"></td>
                    <td class="text-right">Subtotal:</td>
                    <td class="text-right">
                        <span t-field="order.amount_untaxed" style="white-space: nowrap;"
                              t-options="{'widget': 'monetary','from_currency': order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                    </td>
                </tr>
                <tr>
                    <td class='noborder' colspan="1"></td>
                    <td class="text-right noborder">Taxes:</td>
                    <td class="text-right noborder">
                        <span t-field="order.amount_tax" style="white-space: nowrap;"
                              t-options="{'widget': 'monetary', 'from_currency': order.pricelist_id.currency_id, 'display_currency': website.currency_id}"/>
                    </td>
                </tr>
                <tr>
                    <td class='noborder' colspan="1"></td>
                    <td class="text-right">
                        <strong>Total:</strong>
                    </td>
                    <td class="text-right">
                        <strong t-field="order.amount_total"
                                t-options='{"widget": "monetary", "display_currency": order.pricelist_id.currency_id}'/>
                    </td>
                </tr>
            </tfooter>
        </xpath>
    </template>

    <template inherit_id="sale.report_saleorder_document" id="sale_order_report">
        <xpath expr="//div[@class='page']//div[@class='row']//div[@class='col-xs-6']" position="replace">
        </xpath>
        <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="replace">
            <div class="col-xs-5 col-xs-offset-1">
                <div t-field="doc.partner_id"
                     t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
            </div>
        </xpath>
        <xpath expr="//thead//th[2]" position="replace">
        </xpath>
        <xpath expr="//t[@t-as='l']//td[2]" position="replace">
        </xpath>
    </template>

    <template inherit_id="website_sale.wizard_checkout" id="custom_checkout_wizard">
        <xpath expr="//li[@id='step20']" position="replace">
        </xpath>
        <xpath expr="//li[@id='step10']" position="replace">
            <li t-att-class="step==10 and 'text-primary' or 'text-muted'" id="step10">
                <t t-if="step&gt;10 and step&lt;50">
                    <a href="/shop/cart" class="text-success">
                        Review Details<span class="chevron"></span>
                    </a>
                </t>
                <t t-if="not (step&gt;10 and step&lt;50)">
                    Review Details<span class="chevron"></span>
                </t>
            </li>
        </xpath>
    </template>
</odoo>
