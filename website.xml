<odoo>

    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                  href="/ETC/static/src/css/style.css"/>
            <script type="text/javascript" src="/ETC/static/src/js/main.js"/>
        </xpath>
    </template>

    <!--Home Page Design-->
    <template id='custom_home_page' name="Home">
        <t t-call="website.layout">
            <input type="hidden" t-att-value="request.env.uid" id="uid"/>
            <div class="container">
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"/>
                        <li data-target="#myCarousel" data-slide-to="1"/>
                        <li data-target="#myCarousel" data-slide-to="2"/>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">

                        <div class="item active">
                            <img src="ETC\static\src\image\img2X1.jpg" alt="TOLL BOOTH" style="width:100%; font-size: 20px;"/>
                            <div class="carousel-caption">
                                <p>Electronic toll collection (ETC) aims to eliminate the delay on toll roads,
                                    toll bridges, and toll tunnels by collecting tolls
                                    without cash and without requiring cars to stop.
                                </p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="ETC\static\src\image\image3.jpg" alt="TOLL BOOTH" style="width:100%;"/>
                            <div class="carousel-caption">
                                <p>Electronic toll collection (ETC) aims to eliminate the delay on toll roads,
                                    HOV lanes, toll bridges, and toll tunnels by collecting tolls
                                    without cash and without requiring cars to stop
                                </p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="ETC\static\src\image\image4X1.jpg" alt="TOLL BOOTH" style="width:100%;"/>
                            <div class="carousel-caption">
                                <p>Electronic toll collection (ETC) aims to eliminate the delay on toll roads,
                                    HOV lanes, toll bridges, and toll tunnels by collecting tolls
                                    without cash and without requiring cars to stop
                                </p>
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <i class="fa fa-chevron-left"/>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <i class="fa fa-chevron-right"/>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <!--&lt;!&ndash;Menu Bar design&ndash;&gt;-->
    <template id='menu_page' name="Menu">
        <t t-call="website.layout">
            <input type="hidden" t-att-value="request.env.uid" id="uid"/>
            <div class="stretch" id="menuDiv">
            </div>
        </t>
    </template>
    <!--Toll charges-->
    <template id='toll_charges_page' name="Toll Charges">
        <t t-call="website.layout">
            <div class="container">
                <input type="hidden" t-att-value="request.env.uid" id="uid"/>
                <div class="row" style="margin-top:3% !important">
                    <div id="custom-search-input">
                        <div class="input-group col-md-10 col-md-offset-1">
                            <form action="/search_data" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="text" class="search-query form-control" placeholder="Search here...."
                                       name="search_val" t-att-value="search_val"/>
                                <span class="input-group-btn">
                                    <button class="btn btn-danger" type="submit">
                                        <i class="fa fa-search"/>
                                    </button>
                                </span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="col-md-12" style="margin-top:3% !important">
                    <t t-foreach="toll_info" t-as="toll">
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" t-attf-href="#collapse#{toll.id}">
                                            <div>
                                                <t t-esc="toll.location_id.location_1"/>
                                                <t t-esc="toll.location_id.location_2"/>
                                            </div>
                                            <i class="fa fa-caret-down"
                                               style="position: relative;top: -18px;float:right;"/>
                                        </a>
                                    </h4>
                                </div>
                                <div t-attf-id="collapse#{toll.id}" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <t t-foreach="toll.toll_ids" t-as="tl">
                                            <div class="col-md-12">
                                                <div class="col-md-6">
                                                    <t t-esc="tl.name"/>
                                                </div>
                                                <div class="col-md-3">
                                                    <t t-esc="tl.type"/>
                                                </div>
                                                <div class="col-md-3">
                                                    <t class="decimal_precision"
                                                       t-att-data-precision="str(tl.currency_id.decimal_places)">
                                                        <span t-esc="tl.amount"
                                                              t-options='{"widget":"monetary", "display_currency" : tl.currency_id,}'/>
                                                    </t>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <!--search data page-->
    <template id='toll_search_data_page' name="Toll Charges">
        <t t-call="website.layout">
            <div class="input-group col-md-10 col-md-offset-1" style="margin-top:23px !important;">
                <form action="/search_data" method="POST">
